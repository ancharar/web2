mixin createMenu(menu, active)
  header.menu
    h1.menu__title Mультфильмы Хаяо Миядзаки
    each value, key in menu
      if active == key
        a.menu__link.menu__link_active(href=value)= key
      else
        a.menu__link(href=value)= key

mixin imagesSection(listImages)
  section.images
    div.images_main
      a(href= "miyazaki.html") 
        img(src=require(`./images/${listImages[0].file}`), alt=listImages[0].alt)
    div.images_rest
      each image, index in listImages
        if index > 0
          img(src=require(`./images/${image.file}`), alt=image.alt)

mixin sections(listSections)
  section.items
    each section, index in listSections
      div(class=`item${index + 1}`)
        if section.image
          img(src=require(`./images/${section.image}`), alt=section.alt)
        div.item_description
          h1= section.header
          hr(color="233644", size="4")
          p= section.paragraphs

mixin createMenuBuild(menu, active)
  header.menu
    h1.menu__title Mультфильмы Хаяо Миядзаки
    each value, key in menu
        if key === "Главная"
            a.menu__link(href=value)= key
            if active
                a.menu__link.menu__link_active(href="#")= active
        else
            a.menu__link(href=value)= key

mixin galleryItem(image, altText = "Рисунок")
  .image
    a(href= "building.html") 
      img(src=require("./images/" + image), alt=altText)

mixin sectionBlock(header, image, paragraphs)
  .content
    .image
      img(src=require("./images/" + image), alt=header)
    h3= header
    each paragraph in paragraphs
      p= paragraph

mixin sidebarItem(header, text, image)
  .content
    .text
      h3= header
      p= text
    .image
      img(src=require("./images/" + image), alt=header)

